<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_marginBottom="10dp"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        app:cardCornerRadius="10dp"
        android:elevation="1dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="@color/grayBackground"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fromTo"
                android:textStyle="bold"
                android:textSize="14sp"
                android:text="@string/app_name"
                android:textColor="@color/black"
                android:hint="@string/app_name"
                />
            <RelativeLayout
                android:id="@+id/fromdata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/fromTo">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/app_name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:id="@+id/fromtext"
                    android:layout_toLeftOf="@id/fromVolume"
                    />

                <ImageButton
                    android:id="@+id/fromVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_volume_up_24"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>
                <View
                    android:id="@+id/divider"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black"
                    android:layout_below="@id/fromdata"
                   />
            <RelativeLayout
                android:id="@+id/speechTranslatedTextlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider"
                android:layout_marginTop="5dp">
                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="@string/app_name"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:id="@+id/totext"
                    android:layout_toLeftOf="@id/toVolume"
                    />

                <ImageButton
                    android:id="@+id/toVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_volume_up_24"
                    android:background="@color/white"
                    android:backgroundTint="@color/white"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/speechTranslatedTextlayout"
                android:gravity="right|end"
                android:padding="10dp"
                >
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/deleteSaved"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textColor="#ff0000"
                    android:background="@color/grayBackground"
                    app:backgroundTint="@color/grayBackground"
                    android:shadowColor="@color/grayBackground"
                    />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>